generator client {
  provider = "prisma-client-js"
  output   = "../backend/generated/prisma" 
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") 
}

model Profissional {
  id            String        @id @map("_id") @db.ObjectId
  nome          String
  email         String        @unique 
  telefone      String
  procedimentos Procedimento[] @relation("ProfissionalProcedimentos")
}

model Procedimento {
  id             String       @id @map("_id") @db.ObjectId
  nome           String
  valor          Float
  profissionalId String       @db.ObjectId
  profissional   Profissional @relation("ProfissionalProcedimentos", fields: [profissionalId], references: [id])
}